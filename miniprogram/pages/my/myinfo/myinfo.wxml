<cu-custom bgColor="bg-gradual-orange"  bgImage="../../../images/bg-bar.jpg" isBack="{{true}}">
	<view slot="backText">返回</view>
	<view slot="content">信息设置</view>
</cu-custom>

<view class="cu-form-group margin-top">
  <view class="title">头像</view>
  <image src="{{avatarUrl}}" class="cu-avatar radius"></image>
</view>
<form bindsubmit="formSubmit">
  <view class="border-bottom cu-form-group">
    <view class="title">昵称</view>
    <view class="text-right">{{nickname}}</view>
  </view>
  <view class="border-bottom cu-form-group">
    <view class="title"><text style="color: red; font-size: 30rpx; margin-right: 5rpx;">*</text>姓名</view>
    <input class="text-right" value="{{name}}" bindinput="getname" bindtap="actbutton"></input>
  </view>
  <view class="cu-form-group">
    <view class="title">性别</view>
    <!-- 单选选择性别 -->
    <picker bindtap="actbutton" bindchange="getchange" range="{{genderList}}">
      <view class="picker">{{gender}}</view>
    </picker>
  </view>
  <view class="border-bottom cu-form-group">
    <view class="title"><text style="color: red; font-size: 30rpx; margin-right: 5rpx;">*</text>手机号/邮箱</view>
    <input class="text-right" value="{{contact}}" bindinput="getcontact" bindtap="actbutton"></input>
  </view>
  <view class="border-bottom cu-form-group">
    <view class="title"><text style="color: red; font-size: 30rpx; margin-right: 5rpx;">*</text>学校</view>
    <input class="text-right" value="{{school}}" bindinput="getschool" bindtap="actbutton"></input>
  </view>
  <view class="border-bottom cu-form-group">
    <view class="title"><text style="color: red; font-size: 30rpx; margin-right: 5rpx;">*</text>院系</view>
    <input class="text-right" value="{{college}}" bindinput="getcollege" bindtap="actbutton"></input>
  </view>
  <view class="border-bottom cu-form-group">
    <view class="title">专业</view>
    <input class="text-right" value="{{major}}" bindinput="getmajor" bindtap="actbutton"></input>
  </view>
  
  <view class="cu-form-group">
    <view class="title">年级</view>
    <picker bindtap="actbutton" bindchange="getchange2" range="{{gradeList}}">
      <view class="picker">{{grade}}</view>
    </picker>
  </view>
  
  <view class="margin-top ">
    <button class="block lg" type="primary" disabled="{{disabled}}" bindtap="submitform">保存</button>
  </view>
</form>